name 'libargp'
org 'amylum'

source(
  type: 'tar',
  url: 'https://www.lysator.liu.se/~nisse/misc/argp-standalone-1.3.tar.gz',
  checksum: 'dec79694da1319acd2238ce95df57f3680fea2482096e483323fddf3d818d8be'
)

configure_flags(
  prefix: '/usr',
)
harden
cflags ['-std=c89']
patch 'license.patch'

build do
  configure
  make
  cp 'libargp.a', 'usr/lib/libargp.a'
  cp 'argp.h', 'usr/include/argp.h'
end

